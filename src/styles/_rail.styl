.rail
  position absolute
  top 0
  width primary-length * 2 rem
  height 100%
  padding primary-length px
  display flex
  flex-direction column
  pointer-events none
  &.left
    left 0
  &.right
    right 0
  > .panel-container
    flex 1
    overflow hidden
    display flex
    flex-direction column
    border-radius 3px
    flex-basis 27px
    transition flex-grow .2s ease-in-out
    pointer-events auto
    &:not(:last-child)
      margin-bottom primary-length px
    > .panel-header
      background-color shade-dark
      border solid 1px shade-medium
      border-bottom none
      color #fff
      text-align center
      user-select none
      cursor default
      > div, span
        vertical-align middle
      > div
        display inline-block
        width 16px
        height 16px
        margin-right 5px
        position relative
        > svg
          position absolute
          width 100%
          height 100%
          top 0
          left 0
          transition .2s transform ease-in-out
          transform rotate(0deg)
        .svg-plus
          opacity 0
        .svg-minus
          opacity 1
    > .panel
      width 100%
      flex 1
      left 0
      background-color rgba(90, 90, 90, 0.7)
      color white
      border solid 1px shade-medium
      border-top none
      overflow-y auto
      overflow-x hidden
      .check-results
        width 200%
        padding-right 0
        display flex
        position relative
        transition left .2s ease-in-out
        left 0
        &.details-view
          left -100%
        > .panel-section
          flex 1
          padding-right 8px
    &.collapsed
      flex-grow initial
      > .panel-header
        > div
          > svg
            transform rotate(-90deg)
          .svg-plus
            opacity 1
          .svg-minus
            opacity 0