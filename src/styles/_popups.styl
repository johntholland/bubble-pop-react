.modal
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(30, 30, 30, 0.7)
  padding-top primary-length * 2 px

.popup
  padding primary-length px
  border solid 1px shade-dark
  &.file-import
    width primary-length * 24 px
    margin-left auto
    margin-right auto
    background-color #EEE